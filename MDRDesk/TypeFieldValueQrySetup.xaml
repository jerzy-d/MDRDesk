<Window x:Class="MDRDesk.TypeFieldValueQrySetup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MDRDesk"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d"
        Title="TypeFieldValueQrySetup" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>
        <TextBlock Name="TypeInfo" Grid.Row="0" Margin="2,2,2,2"/>
        <ListBox Name="TypeFields" Grid.Row="1" SelectionMode="Single" Margin="2,2,2,2"/>
        <WrapPanel Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="2,2,2,2">
            <Button IsDefault="True" Click="DialogOkClicked" MinWidth="60" Margin="0,0,10,0" VerticalAlignment="Center">_Ok</Button>
            <Button IsCancel="True" MinWidth="60" VerticalAlignment="Center">_Cancel</Button>
        </WrapPanel>

    </Grid>
</Window>
